    </form>
</body>
<script>
    signup_form.onsubmit = async(e) => {
        e.preventDefault();
        console.log("sorkqhdi")
        const {uid: {value : uidValue}, upw :{value: upwValue}} = e.target;
        console.log(uidValue,upwValue)
        const {data} = await axios.post('/signup', {uid : uidValue, upw : upwValue})
        if (data.state === 200){
        location.href = "/login"
        } else {
            alert("잘못된 회원가입 입니다.")
        }
    }

</script>
